###############################################
# Scenario 4: Time-Limited Access Policy
###############################################
# Scenario Description:
# - Access limited to specific time period only
# - No geographic restrictions
# - No user type restrictions
# - Time window from 2024-03-01 to 2025-03-01
# - Access expires automatically after end date

# TimeWindow Policy Definition
drkr:TimeWindowPolicy a odrl:Policy ;
    odrl:uid <https://w3id.org/drk/resource/TimeWindowPolicy> ;
    rdfs:label "Time-Limited Access Policy"@en ;
    dct:description "Policy governing access within a specific time window"@en ;
    odrl:permission [
        a odrl:Permission ;
        odrl:action odrl:use ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:dateTime ;
            odrl:operator odrl:gteq ;
            odrl:rightOperand "2024-03-01T00:00:00"^^xsd:dateTime ;
            rdfs:comment "Access starts from March 1, 2024"@en
        ] ,
        [
            a odrl:Constraint ;
            odrl:leftOperand odrl:dateTime ;
            odrl:operator odrl:lteq ;
            odrl:rightOperand "2025-03-01T23:59:59"^^xsd:dateTime ;
            rdfs:comment "Access ends on March 1, 2025"@en
        ]
    ] .

# Time-Limited Dataset Template
drk:TimeLimitedDataset a  odrl:Asset ;
    odrl:uid "TimeLimitedDataset" ;
    dct:title "Time-Limited Access Dataset"@en ;
    dct:description "Dataset with access restricted to specific time period"@en ;
    dct:temporal "2024-03-01/2025-03-01"^^xsd:string ;
    dct:accessRights "restricted"^^xsd:string ;
    odrl:hasPolicy drk:TimeWindowPolicy .
