###############################################
# Scenario 5: Connector Reference Access Policy
###############################################
# Scenario Description:
# - Access based on connector ID validation
# - Must match intended connector identifier
# - Simple reference check mechanism
# - Binary allow/deny based on match

# Connector Reference Policy
drk:ConnectorReferencePolicy a odrl:Policy ;
    odrl:uid <https://w3id.org/drk/resource/ConnectorReferencePolicy> ;
    rdfs:label "Connector Reference Access Policy"@en ;
    dct:description """Policy governing access based on connector identification. 
    The policy evaluator will compare the provided connector name/ID against allowed values.
    Connectors may be identified by either string names or URIs."""@en ;
    odrl:permission [
        a odrl:Permission ;
        odrl:action odrl:use ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:purpose ;
            odrl:operator odrl:isAnyOf ;
            odrl:rightOperand (
                "connector-a"^^xsd:string 
                "https://connector-b.example.com"^^xsd:anyURI
                "Connector-C"^^xsd:string
            ) ;
            rdfs:comment """The policy evaluator will match these values against the connector's identifier.
            Values can be either string names or URIs - the evaluator handles both formats."""@en
        ]
    ] .

# Additional documentation about connector identification
drk:ConnectorIdentification a rdfs:Class ;
    rdfs:label "Connector Identification"@en ;
    rdfs:comment """Connectors can be identified by:
    1. String-based names (e.g., 'connector-a')
    2. URIs (e.g., 'https://connector-b.example.com')
    The policy evaluator will normalize and compare these identifiers during evaluation."""@en .
